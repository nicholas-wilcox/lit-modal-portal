{
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"],
  "compilerOptions": {
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2019",
    "preserveWatchOutput": true,
    "skipLibCheck": true
  },
  "watchOptions": {
    "excludeDirectories": ["**/node_modules"]
  }
}
