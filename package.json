{
  "name": "lit-modal-portal",
  "version": "0.1.0",
  "description": "A specialized portal mechanism for modals developed with the Lit framework.",
  "exports": {
    "./modal-controller": "./dist/modal-controller.js",
    "./modal-portal": "./dist/modal-portal.js",
    "./portal": "./dist/portal.js",
    "./lib/*": "./dist/lib/*"
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run tsc && npm run esbuild && npm run esbuild:min",
    "build:watch": "concurrently \"npm:tsc:watch\" \"npm:esbuild:watch\"",
    "clean": "rimraf dist/*",
    "dev": "wds --node-resolve --watch --app-index dev/index.html",
    "esbuild": "node esbuild.config.js",
    "esbuild:min": "node esbuild.config.js -m",
    "esbuild:watch": "node esbuild.config.js -w",
    "tsc": "tsc",
    "tsc:watch": "tsc -w",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "Lit",
    "modal",
    "portal",
    "custom element"
  ],
  "author": "Nicholas Wilcox",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cirrus-logic/lit-modal-portal.git"
  },
  "bugs": {
    "url": "https://github.com/cirrus-logic/lit-modal-portal/issues"
  },
  "homepage": "https://github.com/cirrus-logic/lit-modal-portal#readme",
  "type": "module",
  "devDependencies": {
    "@web/dev-server": "^0.1.31",
    "@web/dev-server-esbuild": "^0.3.0",
    "concurrently": "^7.1.0",
    "esbuild": "^0.14.36",
    "rimraf": "^3.0.2",
    "ts-lit-plugin": "^1.2.1",
    "typescript": "^4.6.3",
    "yargs-parser": "^21.0.1"
  },
  "dependencies": {
    "immutable": "^4.0.0",
    "lit": "^2.2.2"
  }
}
